	KnobCorner2.CornerRadius = UDim.new(1, 0)
	KnobCorner2.Parent = TransSliderKnob
	
	-- Trans Value Label
	local TransValueLabel = Instance.new("TextLabel")
	TransValueLabel.Name = "ValueLabel"
